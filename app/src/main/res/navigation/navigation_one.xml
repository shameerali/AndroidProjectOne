<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_one"
    app:startDestination="@id/ncFirstPageFragment">

    <fragment
        android:id="@+id/ncFirstPageFragment"
        android:name="com.example.androidfour.navigation_component.One.fragment.NcFirstPageFragment"
        android:label="fragment_nc_first_page"
        tools:layout="@layout/fragment_nc_first_page" >
        <action
            android:id="@+id/action_ncFirstPageFragment_to_ncSecondPageFragment"
            app:destination="@id/ncSecondPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/ncSecondPageFragment"
        android:name="com.example.androidfour.navigation_component.One.fragment.NcSecondPageFragment"
        android:label="fragment_nc_second_page"
        tools:layout="@layout/fragment_nc_second_page" >
        <action
            android:id="@+id/action_ncSecondPageFragment_to_ncThirdPageFragment"
            app:destination="@id/ncThirdPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/ncThirdPageFragment"
        android:name="com.example.androidfour.navigation_component.One.fragment.NcThirdPageFragment"
        android:label="fragment_nc_third_page"
        tools:layout="@layout/fragment_nc_third_page" />
</navigation>